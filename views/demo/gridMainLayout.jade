extends ../layout/layout.jade
block content
	mixin isSideLiActive(value, href, text)
		if gridSideActive == value 
			li(role="presentation").active
				a(href='#{href}') #{text} 
		else
			li(role="presentation")
				a(href='#{href}') #{text}  

	.container-fluid
		.col-sm-3.col-lg-2
			ul.nav.nav-pills.nav-stacked
				+isSideLiActive("option","/demo/grid/option", "Options")
				+isSideLiActive("full","/demo/grid/full", "Full grid")
		.col-sm-9.col-lg-10
			block gridLayoutContent
